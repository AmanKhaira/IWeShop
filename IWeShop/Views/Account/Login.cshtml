@using IWeShop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Start -->
<div class="section">

    <!-- Breadcrumb Area Start -->
    <div class="breadcrumb-area bg-light">
        <div class="container-fluid">
            <div class="breadcrumb-content text-center">
                <h1 class="title">Login | Register</h1>
                <ul>
                    <li>
                        <a href="/Home/Index">Home </a>
                    </li>
                    <li class="active"> Login | Register</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Area End -->

</div>


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal auth-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    <!-- Breadcrumb Section End -->
    <!-- Login | Register Section Start -->
    <div class="section section-margin">
        <div class="container">

            <div class="login-wrapper">

                <!-- Login Title & Content Start -->
                <div class="section-content text-center mb-5">
                    <h2 class="title mb-2">Login</h2>
                    <p class="desc-content">Please login using account detail bellow.</p>
                </div>
                <!-- Login Title & Content End -->
                <!-- Form Action Start -->
              

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <!-- Input Email Start -->
                    <div class="single-input-item mb-3">
                        <input type="text" id="UserName" name="UserName" class="form-control" placeholder="Email or Username">
                    </div>
                    <!-- Input Email End -->
                    <!-- Input Password Start -->
                    <div class="single-input-item mb-3">
                        <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your Password">
                    </div>
                    <!-- Input Password End -->
                    <!-- Checkbox/Forget Password Start -->
                    <div class="single-input-item mb-3">
                        <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                            <div class="remember-meta mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="rememberMe">
                                    <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                </div>
                            </div>
                            <a href="#" class="forget-pwd mb-3">Forget Password?</a>
                        </div>
                    </div>
                    <!-- Checkbox/Forget Password End -->
                    <!-- Login Button Start -->
                    <div class="single-input-item mb-3">
                        <button class="btn btn btn-dark btn-hover-primary rounded-0">Login</button>
                    </div>
                    <!-- Login Button End -->
                    <!-- Lost Password & Creat New Account Start -->
                    <div class="lost-password">
                        <a href="/Account/Register">Create Account</a>
                    </div>
                    <!-- Lost Password & Creat New Account End -->

                <!-- Form Action End -->

            </div>

        </div>
    </div>
    <!-- Login | Register Section End -->

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $(this).find('.MainDiv').removeClass("app-main");
        });
    </script>
}