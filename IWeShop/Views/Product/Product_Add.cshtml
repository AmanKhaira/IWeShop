@model IWeShop.Models.Product_Master

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrapper">
    <!-- .page -->
    <div class="page">
        <!-- .page-inner -->
        <div class="page-inner">

            <div class="page-section">
                <!-- .card -->
                <div class="card card-fluid">

                    <div class="card-body">
                        <header class="page-title-bar">
                            <!-- title and toolbar -->
                            <div class="d-md-flex align-items-md-start">
                                <strong class="mr-sm-auto"> <i class="fa fa-plus"></i> @ViewBag.Title</strong>
                            </div>
                        </header>
                        @using (Html.BeginForm("Product_Add_Edit", "Product", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ProductID" value="0" />

                            <div class="card card-outline">
                                <div class="card-body">
                                    
                                    <div class="row">
                                        <div class="col-md-3 mt-3">
                                            <label>Category</label>
                                            @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus", required = "required" })
                                        </div>

                                        <div class="col-md-3 mt-3">
                                            <label>Product Name</label>
                                            <input type="text" class="form-control" maxlength="30" name="ProductName" id="ProductName" required placeholder="Product Name" />
                                        </div>

                                        <div class="col-md-3 mt-3">
                                            <label>Price</label>
                                            <input type="text" class="form-control" name="Price" required placeholder="Price" />
                                        </div>

                                        <div class="col-md-3 mt-3">
                                            <label>Discount</label>
                                            <input type="text" class="form-control" name="Discount" required placeholder="Discount" />
                                        </div>
                                        <div class="col-md-12 mt-3">
                                            <textarea class="form-control" rows="3" cols="3" required name="ProductDesc" placeholder="Product Description" maxlength="500"></textarea>
                                        </div>

                                    </div>

                                </div>
                                <hr />
                                <div class="text-center mb-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-check"></i> Submit
                                    </button>
                                    <a href="@Url.Action("Product_List","Product",new {id=ViewBag.InCategoryID, Category=Request.QueryString["Category"]})" class="btn btn-secondary mr-2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
